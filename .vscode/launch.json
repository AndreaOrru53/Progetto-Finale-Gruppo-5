{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch MoviesApplication",
            "request": "launch",
            "mainClass": "com.themoviedb.movies.MoviesApplication",
            "projectName": "movies"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Dotnet/src/MovieRating.RestAPI/bin/Debug/net6.0/MovieRating.RestAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Dotnet/src/MovieRating.RestAPI",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}